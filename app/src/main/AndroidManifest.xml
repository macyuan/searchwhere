<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mytian.lb"
    android:installLocation="auto">

    <!-- 解决Android L上通知显示异常问题，targetSdkVersion需要设置成22 -->
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="false"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />

    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- SD卡读取权限，用户写入离线定位数据-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />


    <!--fir.img-->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 允许程序访问Wi-Fi网络状态信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- 允许程序获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 允许程序读取或写入系统设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- 允许一个程序修改当前设置，如本地化 -->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <!-- 读取设备外部存储空间（内置SDcard和外置SDCard）的文件 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 写入设备外部存储空间（内置SDcard和外置SDCard）的文件 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 请求访问使用照相设备 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 允许应用去呼叫killBackgroundProcesses()方法 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <!--短信-->
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--Crosswalk-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="18" />


    <application
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.mytian.lb.App"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme"
        tools:replace="name,icon,label,theme,allowBackup">

        <!--fir.img-->
        <meta-data
            android:name="BUG_HD_SDK_GENERAL_KEY"
            android:value="fd0f3eb6408ee9ef603b4bc21fa99801" />

        <!--Glide-okhttp-->
        <meta-data
            android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
            android:value="GlideModule"/>

        <activity
            android:name=".activity.LauncherActivity"
            android:theme="@style/AppThemeWTN">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--主界面-->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppThemeWTN">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

        <!--登录-->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppThemeTN"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--注册-->
        <activity
            android:name=".activity.RegisterActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--重置密码-->
        <activity
            android:name=".activity.ResetPassWordActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--添加关注-->
        <activity
            android:name=".activity.AddFollowActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--好友列表-->
        <activity
            android:name=".activity.UserDetailActivity"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--图片裁剪-->
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />

        <!--url 界面-->
        <activity
            android:name=".activity.WebViewActivity"
            android:theme="@style/AppTheme"></activity>

        <!--图片预览 界面-->
        <activity
            android:name=".activity.ShowPictureActivity"
            android:theme="@style/AppTheme"></activity>

        <!-- push service start -->
        <!--个推SDK配置开始-->
        <!-- 配置第三方Receiver -->
        <receiver
            android:name=".push.PushMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.igexin.sdk.action.kvuUWGiv0c6sHXaYA8JzT7" />
            </intent-filter>
        </receiver>
        <!-- 个推SDK配置结束 -->

        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <data android:scheme="tencent1105046638" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- 调用新浪原生SDK，需要注册的回调activity -->
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 微信分享回调 -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- mapview -->
        <activity
            android:name="com.onlylemi.mapview.MapLayerTestActivity"
            android:label="MapLayerTest">
        </activity>
        <activity
            android:name="com.onlylemi.mapview.LocationLayerTestActivity"
            android:label="LocationLayerTest">
        </activity>
        <activity
            android:name="com.onlylemi.mapview.BitmapLayerTestActivity"
            android:label="BitmapLayerTest">
        </activity>
        <activity
            android:name="com.onlylemi.mapview.MarkLayerTestActivity"
            android:label="MarkLayerTest">
        </activity>
        <activity
            android:name="com.onlylemi.mapview.RouteLayerTestActivity"
            android:label="RouteLayerTest">
        </activity>

        <activity
            android:name="com.scanbook.view.activity.BookViewActivity"
            android:theme="@style/CustomActionBarThemeBack"
            android:label="@string/appname" >
        </activity>
        <activity
            android:name="com.scanbook.view.activity.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarThemeBack"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.scanbook.view.activity.AnnotationListActivity"
            android:theme="@style/CustomActionBarThemeBack"
            android:label="@string/appname" >
        </activity>
        <activity
            android:name="com.scanbook.view.activity.SearchActivity"
            android:theme="@style/CustomActionBarThemeBack"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.scanbook.view.activity.GuidePageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.scanbook.view.activity.AboutActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/aboutme"
            android:theme="@style/CustomActionBarThemeBack"
            android:screenOrientation="portrait" >
        </activity>


        <!--广告SDK-->
        <activity android:name="mp.dt.aytp"
            android:theme="@android:style/Theme.Translucent" />
        <service android:name="mp.dt.lidpce" />
        <receiver android:name="mp.dt.rrlimp" >
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="com.p.d" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!--友盟SDK-->
        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" >
        </service>
        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>


        <!--百度地图-->
        <activity
            android:name="com.lifehelper.ui.RouteLineActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.lifehelper.ui.WhoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"></service>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="bbgsZpeFwGYAEhI9YEM8x9jQeA8rr3Qj" />

    </application>

</manifest>
