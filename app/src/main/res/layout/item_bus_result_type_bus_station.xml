<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_point"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_bus_circle" />

    <ImageView
        android:id="@+id/iv_point_line"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginTop="6dp"
        android:background="@color/skin_colorPrimary_blue" />

    <TextView
        android:id="@+id/tv_item_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin_big"
        android:layout_toRightOf="@id/iv_point"
        android:text="动物园"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/comment_text_size" />

</RelativeLayout>