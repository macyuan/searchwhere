<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_pop_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_pop_header_icon"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="@dimen/pop_line_height"
                android:layout_gravity="center_horizontal"
                android:src="@color/common_line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_nav_menu_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:textSize="@dimen/comment_text_size_middle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/common_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_pop_menu_detail_different"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/skin_dialog_white"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:scrollbars="none">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>