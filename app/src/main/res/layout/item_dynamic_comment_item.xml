<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/content_gap_small"
    android:layout_height="@dimen/item_comment_head_size">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head_comment"
        android:layout_width="@dimen/item_comment_head_size"
        android:layout_height="@dimen/item_comment_head_size"
        app:riv_border_width="0dip"
        app:riv_corner_radius="@dimen/corner_radius"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat" />

    <TextView
        android:id="@+id/name_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="user name"
        android:layout_marginLeft="@dimen/content_10dp"
        android:textColor="@color/textcolor_theme"
        android:textSize="@dimen/font_btn" />

    <TextView
        android:id="@+id/content_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_10dp"
        android:layout_below="@+id/head"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/textcolor_theme"
        android:textSize="@dimen/font_medium" />

</LinearLayout>


