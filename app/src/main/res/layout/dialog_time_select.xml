<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="33dp"
    android:layout_marginRight="33dp"
    android:background="@drawable/button_bg_white"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_gap_big"
        android:layout_marginLeft="@dimen/content_gap_big"
        android:textColor="@color/textcolor_theme"
        android:textSize="@dimen/font_actionbar_title" />

    <TextView
        android:id="@+id/value"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_gap_big"
        android:layout_marginTop="@dimen/content_10dp"
        android:textColor="@color/textcolor_match"
        android:textSize="@dimen/font_btn"/>

    <com.rey.material.widget.Slider
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Material.Widget.Slider"
        android:id="@+id/time_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_gap_big"
        android:layout_marginBottom="@dimen/content_gap_big"
        android:paddingLeft="@dimen/content_gap_big"
        android:paddingRight="@dimen/content_gap_big"
        android:gravity="center"
        app:sl_primaryColor="@color/match"
        app:sl_secondaryColor ="@color/pink"
        app:sl_maxValue="60"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="@dimen/content_gap_big"
        android:layout_marginBottom="@dimen/content_gap_big"
        android:layout_marginLeft="@dimen/content_gap_big"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/elevation_height"
            android:background="@drawable/button_bg_theme"
            android:paddingLeft="@dimen/elevation_height"
            android:layout_marginRight="@dimen/content_gap"
            android:paddingRight="@dimen/elevation_height"
            android:text="@string/cancel"
            android:textColor="@color/textcolor_theme"
            android:textSize="@dimen/font_medium" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/elevation_height"
            android:background="@drawable/button_bg_theme"
            android:paddingLeft="@dimen/elevation_height"
            android:paddingRight="@dimen/elevation_height"
            android:text="@string/ok"
            android:textColor="@color/textcolor_theme"
            android:textSize="@dimen/font_medium" />

    </LinearLayout>

</LinearLayout>

